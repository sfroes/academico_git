<body class="fixed sidebar-mini">
    @Html.SMCGoogleAnalyticsTagManagerBody()

    @*-- componente noscript --*@
    @Html.SMCNoScriptWarning()

    @using (Smc.Div("divConteudoPrincipal").CssClass("container-fluid").Begin())
    {
        using (Smc.Div("divConteudoPrincipalEstrutura").CssClass("row").Begin())
        {

            <header class="smc-ribbon smc-sga-aluno-ribbon">
                <nav class="navbar navbar-fixed-top smc-size-md-20 smc-size-xs-24 smc-size-sm-22 smc-size-lg-20 col-md-offset-2 col-sm-offset-1 col-lg-offset-2">
                    @*-- Logo --*@
                    <a href="@Url.Action("index", "home", new { @area = "" })" class="smc-aplicaco-logotipo @SMCSizeHelper.GetSizeClasses(SMCSize.Grid4_24, SMCSize.Grid6_24, SMCSize.Grid5_24,SMCSize.Grid4_24)">
                        @*-- Padrão para insersão de logotipo --*@
                        <img class="img-responsive" src="/Recursos/Academico/4.0/SGA.Professor/Images/smc-img-logo-sga-professor.png" alt="Logotipo SGA" />
                    </a>

                    @*-- Busca de funcionalidades --*@
                    @using (Smc.Div("divBuscaFuncionalidades").Size(SMCSize.Grid12_24, SMCSize.Grid18_24, SMCSize.Grid11_24, SMCSize.Grid14_24).Begin())
                    {
                        @Smc.SearchMenu()
                    }

                    @*-- Área do usuário e nome da instituição--*@
                    @using (Smc.Div("divAreaUsuario").CssClass("smc-login navbar-custom-menu smc-sga-aluno-usuario").Size(SMCSize.Grid8_24, SMCSize.Grid24_24, SMCSize.Grid8_24, SMCSize.Grid6_24).Begin())
                    {

                        using (Smc.Div("divLoginProfessor").CssClass("smc-login-instituicao").Size(SMCSize.Grid15_24, SMCSize.Grid15_24, SMCSize.Grid14_24, SMCSize.Grid15_24).Begin())
                        {
                            @Html.Action("ModalSelecionarInstituicao", "Home", new { @area = "" })
                            @(Smc.Button("selecionarInstituicao").Size(SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid2_24).CssClass("smc-estilo-botao-selecionar-instituicao smc-sga-aluno-remove").Type(SMCButtonType.Link).Url(Url.Action("ModalTrocarInstituicao", "Home", new { @area = "" })))
                        }

                        @*-- Área do usuário*@
                        <ul class="nav navbar-nav @SMCSizeHelper.GetSizeClasses(SMCSize.Grid7_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid9_24)">
                            <li>
                                @*--janelas do menu superior--*@
                                @*Smc.MenuFavoritos()*@
                                @*@Smc.Button("open-favorites").CssClass("smc-usuario-favorito").Attribute("title", "Meus itens favoritos").Type(SMCButtonType.Link)*@
                            </li>

                            @*-- Usuário --*@

                            @(Smc.UserProfileWindow()
                                                .Buttons(b => b
                                                .ShowProfile()
                                                .ChangePassword()
                                                .Logout()))
                            <li>
                                @Smc.Accessibility()
                            </li>

                            <li>
                                @Smc.HelpWindow()
                            </li>
                        </ul>
                    }
                </nav>
            </header>

            @*-- Menu principal --*@
            @Smc.MenuPrincipal(orientation: SMCOrientation.Horizontal)
            @*@Html.Partial("_MenuPrincipal")*@

            @*-- Conteúdo - obrigatório --*@
            <div id="divConteudoPrincipal" class="smc-conteudo-centro container-fluid smc-size-md-20 smc-size-xs-24 smc-size-sm-22 smc-size-lg-20 col-md-offset-2 col-sm-offset-1 col-lg-offset-2" data-type="smc-conteudo">

                @*-- (obrigatório) --*@
                @Smc.MessagePlaceholder(SMCMessagePlaceholders.Default).CssClass("smc-mensagens-principal")

                <section class="content">
                    @*-- Área de mensagens e alertas (obrigatório) --*@
                    @Smc.MessagePlaceholder(SMCMessagePlaceholders.Centro).CssClass("smc-mensagens-centro")

                    @*-- titulo da página (obrigatório)--*@
                    <h1>@Smc.RenderTitle()</h1>

                    @*-- componente de navegação entre páginas --*@
                    @Smc.NavigationGroup()

                    @*-- corpo da página (obrigatório) --*@
                    @RenderBody()


                    <!-- Container de alertas (obrigatório) -->
                    @using (Smc.Div("divAlerta").CssClass("bottom-right jGrowl").Attribute("data-alert-container", "default").Begin())
                    {
                    }
                </section>
            </div>

            @*--(obrigatório) uso obrigatório do logotipo da GTI e Copyright--*@
            <footer class="smc-footer-centro footer smc-size-md-20 smc-size-xs-24 smc-size-sm-22 smc-size-lg-20 col-md-offset-2 col-sm-offset-1 col-lg-offset-2">
                <ul class="smc-footer-conteudo container">
                    <li class="smc-footer-copyright">@string.Format(Smc.GetUIResource("Layout_Texto_Copyright"), DateTime.Today.Year)</li>
                    <li class="smc-footer-logo-gti" title="@Smc.GetUIResource("Layout_Titulo_Logotipo_GTI")"></li>
                    <li class="smc-footer-logo-smc" title="@Smc.GetUIResource("Layout_Titulo_Logotipo_SMC")"></li>
                </ul>
            </footer>

            @Smc.MessagePlaceholder(SMCMessagePlaceholders.Footer).IsDefault().CssClass("smc-mensagens-footer")
        }
    }
    @*-- componente alerta navegador (obrigatório) --*@
    @(Smc.BrowserAlert()
                    .RejectBrowser(SMCBrowsers.InternetExplorer, 9)
                    .RejectBrowser(SMCBrowsers.Chrome, 24)
                    .RejectBrowser(SMCBrowsers.FireFox, 20)
                    .RejectBrowser(SMCBrowsers.Safari, 4)
                    //.SuggestedBrowsers(SMCBrowsers.Chrome, SMCBrowsers.FireFox, SMCBrowsers.InternetExplorer)
                    .IconsPath("/Recursos/Images/browsers/")
    )
    @*-- componente alerta processando (obrigatório) --*@
    @*@using (Smc.Div("divAlertaProcessando").CssClass("smc-alerta-processando").Begin())
        {
            <span>@Smc.GetUIResource("Layout_Texto_Aguarde")</span>
        }*@

    @using (Smc.Div("divAlertaProcessando").CssClass("smc-alerta-processando").Begin())
    {
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
        <span class="sr-only"></span>
        <p>@Smc.GetUIResource("Layout_Texto_Aguarde")</p>
        <div>@Smc.GetUIResource("Layout_Texto_Aguarde")</div>
    }

    @*  @Smc.MenuSecundario()*@

    @Html.SMCRegisterBundleScripts()

    @*-- Section para renderização de scrits das views (obrigatório)--*@
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts")
    }

    @MiniProfiler.Current.RenderIncludes()
</body>
</html>