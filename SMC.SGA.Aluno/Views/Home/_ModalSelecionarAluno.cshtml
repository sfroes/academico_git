@model AlunoSeletorViewModel

@if (Model != null && Model.HabilitarSelecao)
{
    using (Smc.ModalWindow("modalSelecionarAlunoInicial")
        .Title(Smc.GetUIResource("Titulo_Modal_Selecao_Vinculo"))
        .Form("formSelecionarAluno", "SelecionarAluno", "Home", new { @area = "" }, config: a => a.Ajax())
        .Button(SMCButtonBehavior.Salvar, config: bnt => bnt.Id("btnSelecionarAluno").DisplayMode(SMCButtonDisplayMode.TextAndIcon).Highlight())
        .CssClass("sga-modal-selecionar-aluno")
        .AutoShow()
        .AllowEscKeyToClose(false)
        .HideCloseButton()
        .Begin())
    {
        @Smc.EditorFor(m => m.SeqInstituicaoEnsino);
        @Smc.EditorFor(m => m.SeqAluno);

    }
}
else
{
    @Html.Action("MarcaAluno", "Home", new { @area = "" })
}