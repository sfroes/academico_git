@model SMC.Academico.UI.Mvc.Areas.TUR.Models.DetalhesDivisaoTurmaColaboradorViewModel
@using (Smc.Div().Size(SMCSize.Grid22_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.NomeFormatado).CssClass("smc-listdetailed-conteudo-titulo").Size(SMCSize.Grid24_24).HideLabel()
        }

        if (Model.ColaboradorOrganizacaoComponente.Count > 0)
        {
            using (Smc.Div().CssClass("").Size(SMCSize.Grid24_24).Begin())
            {
                using (Smc.Div().CssClass("").Size(SMCSize.Grid12_24).Begin())
                {<label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Colaboradores_Professores_Detalhe_Titulo_Tema")</label>}
                using (Smc.Div().CssClass("").Size(SMCSize.Grid6_24).Begin())
                {<label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Colaboradores_Professores_Detalhe_Titulo_CargaHoraria")</label>}

                var view1 = Smc.GetExternalView(SMC.Academico.UI.Mvc.AcademicoExternalViews.DETALHES_DIVISAO_TURMA_COLABORADOR_ORGANIZACAO);
                @Smc.List("Organizacao" + Model.Seq, m => m.ColaboradorOrganizacaoComponente).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(organizacao => Html.Partial(view1, organizacao.Value))
            }
        }
    }
}