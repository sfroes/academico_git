@model SMC.Academico.UI.Mvc.Areas.TUR.Models.SelecaoTurmaViewModel
@if (Model.TurmasMatrizOferta != null && Model.TurmasMatrizOferta.Count > 0)
{
    <p class="smc-sga-titulo-legenda"> @Smc.GetUIResource("Titulo_Legenda_TurmaOfertaMatricula")</p>
    @(Smc.Legend("ComponenteCurriculo", SMCOrientation.Horizontal).CssClass("smc-sga-legenda").Items<SMC.Academico.Common.Areas.MAT.Enums.TurmaOfertaMatricula>())

    TempData["IndiceAtual"] = 0;
    var view1 = Smc.GetExternalView(SMC.Academico.UI.Mvc.AcademicoExternalViews.SELECAO_TURMA_OFERTA);
    @(Smc.List("SelectedValues", Model.TurmasMatrizOferta).AllowSelect(s => s.Seq, x => !x.PreRequisito).HtmlTemplate(turma => Html.Partial(view1, turma)))
}
else
{
    using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
    {
        <p>@Smc.GetUIResource("Label_Nenhum_Registro_Turma")</p>
    }
}