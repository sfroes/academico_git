@using SMC.Academico.Common.Areas.SRC.Constants;

@model SMC.Academico.UI.Mvc.Areas.TUR.Models.PlanoEstudoSelecaoTurmaViewModel

@using (Smc.Fieldset("divPlanoEstudoSelecaoTurmaOferta").LegendText(@Smc.GetUIResource("Fieldset_Modal_SelecaoTurma_Lista_Titulo") + Model.CicloLetivoDescricao).Size(SMCSize.Grid24_24).Begin())
{
    using (Smc.Fieldset("dataselector-filter-selecaoturma").CssClass("smc-fieldset-filter smc-sga-filtro-turma").Begin())
    {
        @Smc.EditorFor(m => m.backUrl)
        @Smc.EditorFor(m => m.SeqSolicitacaoMatricula)
        @Smc.EditorFor(m => m.DescricaoTurma).Size(SMCSize.Grid10_24).DisplayText(@Smc.GetUIResource("Fieldset_Modal_SelecaoTurma_Campo_Turma")).Attribute("id", "descricaoTurma")

        var buttonSet = Smc.ButtonSet();

        buttonSet.AddButton(Smc.Button("data-dataselector-search", "PesquisarSelecaoPlanoEstudoTurmaDetalhes", "SelecaoTurma")
                             .Ajax(isPost: true,
                             updateTargetId: "#divModalPlanoEstudoSelecaoTurmaPesquisa",
                             prepareDataToRequest: "smc.dataselector.prepareSearch('#dataselector-filter-selecaoturma')",
                             fieldsContainerToRequest: "#divModalPlanoEstudoSelecaoTurmaPesquisa #dataselector-filter-selecaoturma #selectorSelectedValuesPlanoEstudo")
                             .CssClass("smc-btn-pesquisar-icotext-destaque Fabi")
                             .Text(Smc.GetUIResource("Fieldset_Modal_SelecaoTurma_Botao_Pesquisar"))
                             .Tooltip(Smc.GetUIResource("Fieldset_Modal_SelecaoTurma_Botao_Pesquisar")));

        buttonSet.AddButton(Smc.Button("data-dataselector-clear", "LimparSelecaoPlanoEstudoTurmaDetalhes", "SelecaoTurma")
                           .Ajax(isPost: true,
                            updateTargetId: "#divModalPlanoEstudoSelecaoTurmaPesquisa",
                            prepareDataToRequest: "smc.dataselector.prepareSearch('#dataselector-filter-selecaoturma')",
                            fieldsContainerToRequest: "#divModalPlanoEstudoSelecaoTurmaPesquisa #dataselector-filter-selecaoturma #selectorSelectedValuesPlanoEstudo")
                           //.DisplayMode(SMCButtonDisplayMode.Icon)
                           //.Attribute("data-clear", "#data-dataselector-search")
                           .CssClass("smc-btn-limpar-ico")
                           .Attribute("data-clear-container", "#divPlanoEstudoSelecaoTurmaOferta")
                           .Attribute("data-clear", "#divPlanoEstudoSelecaoTurmaOferta")
                           .Attribute("id", "botao-limpar")
                           .Tooltip("Limpar pesquisa"));

        @buttonSet;
    }

    using (Smc.Div("divModalPlanoEstudoSelecaoTurmaPesquisa").Attribute("data-id", "divModalPlanoEstudoSelecaoTurmaPesquisa").Size(SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid24_24).Begin())
    {
        if (Model.TurmasOferta != null && Model.TurmasOferta.Count > 0)
        {
            <p class="smc-sga-titulo-legenda"> @Smc.GetUIResource("Titulo_Legenda_TurmaOfertaMatricula")</p>
            @(Smc.Legend("ComponenteCurriculo", SMCOrientation.Horizontal).Items<SMC.Academico.Common.Areas.MAT.Enums.TurmaOfertaMatricula>())

            var view2 = Smc.GetExternalView(SMC.Academico.UI.Mvc.AcademicoExternalViews.PLANO_ESTUDO_SELECAO_TURMA_OFERTA);
            TempData["IndiceAtual"] = 0;
            @(Smc.List("TurmasOferta", Model.TurmasOferta).HtmlTemplate(turma => Html.Partial(view2, turma))) //.AllowSelect(s => s.Seq, x => !x.PreRequisito))
        }
        else
        {
            using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
            {
                <p>@Smc.GetUIResource("Label_Nenhum_Registro_Turma")</p>
            }
        }
    }
}

<script>
    $("#dataselector-filter-selecaoturma").find(":input").each(function () {
        $(this).bind('keypress.filter', function (e) {
            if (e.keyCode == 13) {
                if ($(e.target).closest('#dataselector-filter-selecaoturma').length > 0) {
                    $(e.target).closest('#dataselector-filter-selecaoturma').find('[data-behavior="data-dataselector-search"]').click();
                }
                return false;
            }
        });
    });
    smc.core.setInputFocus($('[data-id="modalSelecionarTurma"]'));
         
    $('#botao-limpar').on('click', function (event) {        
        $("#descricaoTurma").val("");
    });
</script>
