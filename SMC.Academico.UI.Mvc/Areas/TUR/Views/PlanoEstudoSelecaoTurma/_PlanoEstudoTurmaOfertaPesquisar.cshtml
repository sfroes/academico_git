@model SMC.Academico.UI.Mvc.Areas.TUR.Models.PlanoEstudoSelecaoTurmaViewModel

@using (Smc.Div("divModalPlanoEstudoSelecaoTurmaPesquisa").Attribute("data-id", "divModalPlanoEstudoSelecaoTurmaPesquisa").Size(SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid24_24).Begin())
{
    if (Model.TurmasOferta != null && Model.TurmasOferta.Count > 0)
    {
        <p class="smc-sga-titulo-legenda"> @Smc.GetUIResource("Titulo_Legenda_TurmaOfertaMatricula")</p>
        @(Smc.Legend("ComponenteCurriculo", SMCOrientation.Horizontal).Items<SMC.Academico.Common.Areas.MAT.Enums.TurmaOfertaMatricula>())

        var view2 = Smc.GetExternalView(SMC.Academico.UI.Mvc.AcademicoExternalViews.PLANO_ESTUDO_SELECAO_TURMA_OFERTA);
        TempData["IndiceAtual"] = 0;
        @(Smc.List("SelectedValues", Model.TurmasOferta).HtmlTemplate(turma => Html.Partial(view2, turma))) //.AllowSelect(s => s.Seq, x => !x.PreRequisito))
    }
    else
    {
        using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
        {
            <p>@Smc.GetUIResource("Label_Nenhum_Registro_Turma")</p>
        }
    }
}