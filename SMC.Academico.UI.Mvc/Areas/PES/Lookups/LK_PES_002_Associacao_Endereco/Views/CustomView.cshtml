@using SMC.Framework.UI.Mvc.Html.DataSelector

@{object s = ViewBag.DataSelectorSelectedValue; }

@Smc.DataSelectorGrid(s, true, x => Smc.Button(SMCMvcConsts.MODAL_BEHAVIOR_OPEN)
            .Attribute(SMCMvcConsts.MODAL_ID, TempData.Peek("LOOKUP_GUID_JANELA"))
            .Attribute(SMCMvcConsts.MODAL_TITLE, Smc.GetUIResource("Title_Modal_Editar_Endereco_Pessoa"))
            .Ajax(isPost: false)
            .CssClass("smc-btn-alterar-ico")
            .Text(Smc.GetUIResource("Botao_Editar_Endereco_Pessoa"))
            .Tooltip(Smc.GetUIResource("Botao_Editar_Endereco_Pessoa"))
            .Action("Editar", "PessoaEnderecoRoute", new { seq = new SMCEncryptedLong((x as SMC.Academico.UI.Mvc.Areas.PES.Lookups.PessoaEnderecoLookupViewModel).Seq), area = string.Empty }))