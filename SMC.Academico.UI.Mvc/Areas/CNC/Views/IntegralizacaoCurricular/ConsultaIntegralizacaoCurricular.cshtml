@using SMC.Academico.UI.Mvc.Areas.CNC.Models;
@using SMC.Academico.Common.Areas.CNC.Enums;

@model IntegralizacaoConsultaHistoricoViewModel

@{
    var viewCabecalho = Smc.GetExternalView(SMC.Academico.UI.Mvc.AcademicoExternalViews.INTEGRALIZACAO_CURRICULAR_CABECALHO);
    @Html.Partial(viewCabecalho, Model.DadosCabecalho);

    @using (Smc.Form("frmViewPadrao", "PesquisarConsultaIntegralizacaoCurricular", Model.Filtros).Ajax("#divViewPadrao").Begin())
    {
        //Filtros
        using (Smc.Fieldset("fieldsetPesquisaViewPadrao").CssClass("smc-fieldset-filter").Begin())
        {
            @Smc.EditorFor(m => m.Filtros.SeqPessoaAtuacao)
            if (Model.DadosCabecalho.SeqAluno.HasValue)
            {
                @Smc.EditorFor(m => m.Filtros.FiltroSituacaoConfiguracao).Size(SMCSize.Grid6_24)
                @Smc.EditorFor(m => m.Filtros.FiltroDescricaoConfiguracao).Size(SMCSize.Grid12_24)


                var buttonSet = Smc.ButtonSet();
                buttonSet.AddButton(Smc.Button(SMCButtonBehavior.Pesquisar).DisplayMode(SMCButtonDisplayMode.TextAndIcon).Highlight());
                buttonSet.AddButton(Smc.Button(SMCButtonBehavior.LimparEnviar)
                                       .DisplayMode(SMCButtonDisplayMode.Icon));  
                @buttonSet;
            }
        }

        using (Smc.Div("divViewPadrao").Attribute("data-id", "divViewPadrao").Size(SMCSize.Grid24_24).Begin())
        {
            @Html.Action("PesquisarConsultaIntegralizacaoCurricular")
        }
    }
}

@using (Smc.ModalWindow("modalVisualizar")
           .Form("formVisualizar", closeOnSubmit: true)
           .Size(SMCModalWindowSize.Largest)
           .Button(SMCButtonBehavior.Fechar, config: bnt => bnt.DisplayMode(SMCButtonDisplayMode.TextAndIcon))
           .Begin()) { }

@using (Smc.ModalWindow("modalSolicitacao")
           .Form("formSolicitacao", closeOnSubmit: true)
           .Size(SMCModalWindowSize.Largest)
           .Button(SMCButtonBehavior.Fechar, config: bnt => bnt.DisplayMode(SMCButtonDisplayMode.TextAndIcon))
           .Begin()) { }