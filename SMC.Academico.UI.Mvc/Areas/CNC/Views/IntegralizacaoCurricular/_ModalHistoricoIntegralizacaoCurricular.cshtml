@using SMC.Academico.UI.Mvc.Areas.CNC.Models;
@using SMC.Framework.Model;
@using SMC.Academico.Common.Areas.SRC.Constants;

@model IntegralizacaoMatrizHistoricoEscolarViewModel


@using (Smc.Header("Cabecalho", SMCHeaderType.Primary)
                        .Item(prop => prop.CodigoConfiguracao, sizeMD: SMCSize.Grid4_24)
                        .Item(prop => prop.SiglaComponente, sizeMD: SMCSize.Grid2_24)
                        .Item(prop => prop.DescricaoConfiguracao, sizeMD: SMCSize.Grid18_24)
                        .Begin()) { }

@if (Model.HistoricosEmCurso.SMCCount() > 0)
{
    @using (Smc.Fieldset("DadosEmCurso").Size(SMCSize.Grid24_24).LegendText(Smc.GetUIResource("Label_Historico_Escolar_Integralizacao_EmCurso")).Begin())
    {
        @(Smc.Grid("gridEmCurso", new SMCPagerModel<IntegralizacaoMatrizHistoricoEmCursoViewModel>(Model.HistoricosEmCurso))
                                                                                    .HideGridTitle()
                                                                                    .HideNavigator()
                                                                                    .HidePager()
                                                                                    .HideRowNumber()
                                                                                    .HideRowsTotalizer()
                                                                                    .FieldColumn(f => f.DescricaoCicloLetivo, cssClass: "smc-size-md-3 smc-size-sm-24 smc-size-xs-24 smc-size-lg-3")
                                                                                    .FieldColumn(f => f.SituacaoHistoricoEscolar, cssClass: "smc-size-md-4 smc-size-sm-24 smc-size-xs-24 smc-size-lg-4")
                                                                                    .FieldColumn(f => f.CodigoTurma, cssClass: "smc-size-md-3 smc-size-sm-24 smc-size-xs-24 smc-size-lg-3", visible: Model.ExibirTurma)
                                                                                    .FieldColumn(f => f.Nota, cssClass: "smc-size-md-2 smc-size-sm-24 smc-size-xs-24 smc-size-lg-2")
                                                                                    .FieldColumn(f => f.DescricaoConceito, cssClass: "smc-size-md-3 smc-size-sm-24 smc-size-xs-24 smc-size-lg-3")
                                                                                    .FieldColumn(f => f.Faltas, cssClass: "smc-size-md-2 smc-size-sm-24 smc-size-xs-24 smc-size-lg-2")
                                                                                    .FieldColumn(f => f.Professores, cssClass: "smc-size-md-7 smc-size-sm-24 smc-size-xs-24 smc-size-lg-7", visible: Model.ExibirProfessores)
                                                                                    .FieldColumn(f => f.ProfessorTexto, cssClass: "smc-size-md-7 smc-size-sm-24 smc-size-xs-24 smc-size-lg-7", visible: !Model.ExibirProfessores));

    }
}

