@using SMC.Academico.UI.Mvc.Areas.CUR.Lookups;
@using SMC.Framework;
@model MatrizCurricularLookupViewModel

@using (Smc.Div("divItem").Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div("divItem").CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
    {
        using (Smc.Div("divItem").CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Descricao).HideLabel().Size(SMCSize.Grid24_24)
            @Smc.DisplayFor(m => m.DescricaoComplementar).HideLabel().Size(SMCSize.Grid24_24)
        }

        using (Smc.Div("divItem").CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            if (Model.Ofertas != null)
            {
                @(Smc.Grid("OfertasMatriz", new SMCPagerModel<MatrizCurricularOfertasLookupViewModel>(Model.Ofertas, null))                    
                    .FieldColumn(x => x.Codigo)
                    .FieldColumn(x => x.DescricaoUnidadeLocalidade)
                    .FieldColumn(x => x.DescricaoTurno)                    
                    .FieldColumn(x => x.HistoricoSituacaoAtual)                   
                    .HideNavigator()
                    .HideRowNumber()
                )
            }
        }
    }   
}