
@model SMC.Academico.UI.Mvc.Areas.SRC.Models.DocumentoViewModel

@{
    // Registra o datasource do item da lista detalhada
    SMC.Framework.UI.Mvc.Helpers.SMCDataSourceHelper.RegisterDataSource(Html.ViewContext.Controller, Model);
}

