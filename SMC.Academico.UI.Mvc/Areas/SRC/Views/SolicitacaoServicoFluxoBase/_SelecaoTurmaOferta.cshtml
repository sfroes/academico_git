@using SMC.Academico.Common.Areas.MAT.Enums

@model SMC.Academico.UI.Mvc.Areas.MAT.Models.TurmaMatriculaItemViewModel

@using (Smc.Div().Size(SMCSize.Grid22_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
                if (Model.ExibirMatriculaPertence)
                {
                    using (Smc.Div().Size(SMCSize.Grid2_24, SMCSize.Grid24_24, SMCSize.Grid3_24, SMCSize.Grid2_24).CssClass("smc-sga-legenda-agrupamento").Begin())
                    {
                        @Smc.LegendItem(m => m.Pertence)
                        @*@Smc.LegendItem(m => m.MatriculaPertence, displayDescription: false)*@
                    }
                }
                else
                {
                    using (Smc.Div().Size(SMCSize.Grid1_24, SMCSize.Grid24_24, SMCSize.Grid2_24, SMCSize.Grid1_24).CssClass("smc-sga-legenda-agrupamento").Begin())
                    {
                        @Smc.LegendItem(m => m.Pertence)
                    }
                }

            @Smc.DisplayFor(m => m.TurmaFormatado).CssClass("smc-listdetailed-conteudo-titulo").Size(SMCSize.Grid16_24, SMCSize.Grid24_24, SMCSize.Grid13_24, SMCSize.Grid16_24).HideLabel()
            @*@Smc.DisplayFor(m => m.SituacaoMotivo).Size(SMCSize.Grid6_24).CssClass("smc-sga-totalizador").HideLabel()*@
            if (Model.AssociacaoOfertaMatrizTipoTurma != SMC.Academico.Common.Areas.TUR.Enums.AssociacaoOfertaMatriz.ExigeApenasUma)
            {
                using (Smc.Div().Size(SMCSize.Grid6_24).Begin())
                {
                    @Smc.DisplayFor(m => m.DescricaoTipoTurma).Size(SMCSize.Grid24_24).CssClass("smc-sga-totalizador-destaque").HideLabel()
                    @Smc.Instructions().Text(Smc.GetUIResource("DescricaoTipoTurma_FillInstructions")).CssClass("smc-sga-instruction smc-sga-instruction-totalizador")
                }

            }
            @Smc.EditorFor(m => m.backUrl)
        }

        using (Smc.Div().CssClass("col-md-offset-1 col-lg-offset-1 col-sm-offset-1 smc-sga-divisoes-turma").Size(SMCSize.Grid23_24).Begin())
        {
            using (Smc.Div().Size(SMCSize.Grid10_24, SMCSize.Grid12_24, SMCSize.Grid14_24, SMCSize.Grid9_24).Begin())
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("ParametroDivisoes_Detalhe_Titulo")</label>
            }
            using (Smc.Div().Size(SMCSize.Grid10_24, SMCSize.Grid12_24, SMCSize.Grid10_24, SMCSize.Grid10_24).CssClass("smc-margin-left-15").Begin())
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Fieldset_Modal_SelecaoTurma_Campo_Divisao")</label>
            }
            var view1 = Smc.GetExternalView(SMC.Academico.UI.Mvc.AcademicoExternalViews._SELECAO_TURMA_OFERTA_DIVISOES);
            @Smc.List("Divisoes" + Model.Seq, m => m.TurmaMatriculaDivisoes).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(divisao => Html.Partial(view1, divisao.Value))
		}
	}

	var buttonSet = Smc.ButtonSet().Type(SMCButtonSetType.Secondary).Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24).Orientation(SMCOrientation.Vertical);

	if (Model.PertencePlanoEstudo.GetValueOrDefault() && Model.MatriculaPertence == MatriculaPertencePlanoEstudo.Exclusao)
	{
		buttonSet.AddButton(Smc.Button(SMCButtonBehavior.Desfazer)
					 .Ajax(isPost: false)
					 .Action("TurmaDesfazerExcluirSelecaoAluno", routeValues: new { @SeqTurma = Model.Seq, @SeqSolicitacaoMatricula = Request.QueryString["SeqSolicitacaoServico"], @SeqProcessoEtapa = Model.SeqProcessoEtapa, @SeqConfiguracaoEtapa = Request.QueryString["seqConfiguracaoEtapa"], @Descricao = Model.TurmaFormatado })
					 .Confirm(Smc.GetUIResource("Title_Desfazer_Excluir_Turma_Selecionado"), string.Format(Smc.GetUIResource("Desfazer_Excluir_Turma_Selecionado"), Model.TurmaFormatado))
					 .DisplayMode(SMCButtonDisplayMode.Icon)
					 .Type(SMCButtonType.Link));
	}
	else
	{
		buttonSet.AddButton(Smc.Button(SMCMvcConsts.MODAL_BEHAVIOR_OPEN)
					 .Action("TurmaAlterarSelecaoAluno", routeValues: new { @SeqTurma = Model.Seq, @SeqSolicitacaoMatricula = Request.QueryString["SeqSolicitacaoServico"], @SeqProcessoEtapa = Model.SeqProcessoEtapa, @SeqIngressante = Model.SeqIngressante, @SeqConfiguracaoEtapa = Request.QueryString["seqConfiguracaoEtapa"] })
					 .Ajax(isPost: false)
					 .Attribute(SMCMvcConsts.MODAL_ID, "modalAlterarTurma")
					 .Attribute(SMCMvcConsts.MODAL_SUBMIT_URL, Url.Action("TurmaAlterarSelecaoAlunoSalvar"))
					 .Attribute(SMCMvcConsts.MODAL_TITLE, Smc.GetUIResource("TurmaAlterarSelecaoAluno_Title"))
					 .CssClass("smc-btn-alterar-ico").Tooltip(Smc.GetUIResource("Tooltip_Alterar")));

		buttonSet.AddButton(Smc.Button(SMCButtonBehavior.Excluir)
					 .Ajax(isPost: false)
					 .Action("TurmaExcluirSelecaoAluno", routeValues: new { @SeqTurma = Model.Seq, @SeqSolicitacaoMatricula = Request.QueryString["SeqSolicitacaoServico"], @SeqProcessoEtapa = Model.SeqProcessoEtapa, @SeqConfiguracaoEtapa = Request.QueryString["seqConfiguracaoEtapa"] })
						 .Confirm(Smc.GetUIResource("Title_Excluir_Turma_Selecionado"), string.Format(Smc.GetUIResource("Excluir_Turma_Selecionado"), Model.TurmaFormatado))
						 .DisplayMode(SMCButtonDisplayMode.Icon));
	}

	@buttonSet;
}
