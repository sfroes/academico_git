@model ConsultaDivisoesMatrizCurricularGrupoViewModel

@if (!string.IsNullOrEmpty(Model.DescricaoFormacaoEspecifica))
{
    using (Smc.Fieldset("FieldSetDescricaoFormacaoEspecifica").LegendText(Smc.GetUIResource("Label_DescricaoFormacaoEspecifica")).Begin())
    {
    @Smc.DisplayFor(m => m.DescricaoFormacaoEspecifica).Size(SMCSize.Grid24_24).HideLabel()
    }
}
