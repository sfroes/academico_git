@using SMC.SGA.Administrativo.Areas.FIN.Models
@model InstituicaoNivelBeneficioListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            using (Smc.Div().Size(SMCSize.Grid12_24).Begin())
            {
                @Smc.DisplayFor(m => m.DescricaoInstituicaoNivel).Size(SMCSize.Grid24_24)
            }

            using (Smc.Div().Size(SMCSize.Grid12_24).Begin())
            {
                @Smc.DisplayFor(m => m.DescricaoBeneficio).Size(SMCSize.Grid24_24)
            }
        }

        // Div da esquerda com lsita detalhada
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista-item-destaque").Size(SMCSize.Grid8_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid8_24).Begin())
        {
            <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_BeneficioHistoricoValorAuxilio")</label>

            if (Model.BeneficiosHistoricosValoresAuxilio.Count() > 0)
            {

                @(Smc.Grid("ConfiguracaoBeneficio" + Model.Seq, new SMCPagerModel<InstituicaoNivelBeneficioListarBeneficioHistoricoValorAuxilioViewModel>(Model.BeneficiosHistoricosValoresAuxilio))
                        .AutoGenerateColumns()
                        .HideGridTitle()
                        .HideNavigator()
                        .HideRowNumber()
                            .Size(SMCSize.Grid24_24))
            }
            else
            {
                using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
                {
                    <p>@Smc.GetUIResource("Label_Nenhum_Registro")</p>
                }
            }
        }

        // Div da direita com lsita detalhada
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista-item-destaque").Size(SMCSize.Grid16_24).Begin())
        {
            <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_ConfiguracaoAtual")</label>

            if (Model.ConfiguracoesBeneficio.Count() > 0)
            {
                @(Smc.Grid("ConfiguracaoBeneficio" + Model.Seq, new SMCPagerModel<InstituicaoNivelBeneficioListarConfiguracaBeneficioViewModel>(Model.ConfiguracoesBeneficio))
                        .AutoGenerateColumns()
                        .HideGridTitle()
                        .HideNavigator()
                        .HideRowNumber()
                            .Size(SMCSize.Grid24_24))
            }
            else
            {
                using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
                {
                    <p>@Smc.GetUIResource("Label_Nenhum_Registro")</p>
                }
            }
        }
    }
    @Smc.Templates.DetailedListButtons().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24)
}
