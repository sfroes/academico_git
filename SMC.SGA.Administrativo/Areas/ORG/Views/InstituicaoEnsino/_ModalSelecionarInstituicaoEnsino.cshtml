@model InstituicaoEnsinoSeletorViewModel

@if (Model.HabilitarSelecao)
{
    using (Smc.ModalWindow("modalSelecionarInstituicaoInicial")
        .Title(Smc.GetUIResource("Titulo"))
        .Form("formSelecionarInstituicao", "SelecionarInstituicao", "InstituicaoEnsino", config: a => a.Ajax())
        .Button(SMCButtonBehavior.Salvar, config: bnt => bnt.DisplayMode(SMCButtonDisplayMode.TextAndIcon).Highlight())
        .CssClass("sga-modal-selecionar-instituicao")
        .AutoShow()
        .AllowEscKeyToClose(false)
        .HideCloseButton()
        .Begin())
    {
            @Smc.EditorFor(m => m.SeqInstituicaoEnsino).Required();
    }
}
else
{
   @Html.Action("MarcaInstituicao", "InstituicaoEnsino")
}