                            NumeroVia = (x as SolicitacaoAnaliseEmissaoDocumentoConclusaoMensagemListarViewModel).NumeroVia,
                            DocumentoAcademico = (x as SolicitacaoAnaliseEmissaoDocumentoConclusaoMensagemListarViewModel).DocumentoAcademico,
                            Area = "SRC"
