                        .DisplayMode(SMCButtonDisplayMode.Icon)
                        .Ajax(isPost: false, updateTargetId: "#divGridMensagensDiploma")
                        .SecurityToken(UC_SRC_004_18_01.REALIZAR_ATENDIMENTO_DOCTO_CONCLUSAO_ANALISE_EMISSAO)
                        .Enabled((x as SolicitacaoAnaliseEmissaoDocumentoConclusaoMensagemListarViewModel).HabilitarBotaoExcluir)
