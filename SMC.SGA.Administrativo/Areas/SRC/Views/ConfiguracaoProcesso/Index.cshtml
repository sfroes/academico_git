@model ConfiguracaoProcessoFiltroViewModel

@Html.Action("CabecalhoProcesso", new { seqProcesso = Model.SeqProcesso })

@(Smc.ButtonSet().AddButton(Smc.Button(SMCButtonBehavior.Novo)
               .Enabled(Model.HabilitarBotaoNovo)
               .ButtonInstructions(Smc.GetUIResource(Model.MensagemBotaoNovo))
               .DisplayMode(SMCButtonDisplayMode.TextAndIcon)
               .Tooltip(Smc.GetUIResource("Botao_Incluir_Nova_Configuracao_Processo"))
               .Type(SMCButtonType.Link)
               .SecurityToken(UC_SRC_002_02_02.MANTER_CONFIGURACAO_PROCESSO)
               .Url(Url.Action("Incluir", "ConfiguracaoProcesso", new { SeqProcesso = new SMCEncryptedLong((Model as ConfiguracaoProcessoFiltroViewModel).SeqProcesso), Area = "SRC" }))))

@using (Smc.Div("divGridConfiguracoesProcesso").Attribute("data-id", "divGridConfiguracoesProcesso").CssClass("smc-sga-central-solicitacoes").Size(SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid24_24).Begin())
{
    @Smc.ActionList("ListarConfiguracoesProcesso", Model, false)
}

@(Smc.ButtonSet()
       .AddButton(Smc.Button("Voltar", "Index", "Processo")
       .Type(SMCButtonType.Link)
       .CssClass("smc-btn-voltar-icotext"))
)