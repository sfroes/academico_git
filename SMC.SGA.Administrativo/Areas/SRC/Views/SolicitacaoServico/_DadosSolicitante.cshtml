@using SMC.SGA.Administrativo.Models
@model DadosSolicitanteViewModel

@using (Smc.Fieldset("Identificacao").CssClass("smc-sga-confirmacao-dados").Begin())
{
    using (Smc.Div().Size(SMCSize.Grid2_24, SMCSize.Grid24_24, SMCSize.Grid4_24, SMCSize.Grid2_24).CssClass("smc-sga-foto-usuario").Begin())
    {
        if (Model.Identificacao.ArquivoFoto != null)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Identificacao.ArquivoFoto.FileData)" />         
        }
    }
    @Smc.DisplayFor(x => x.TipoAtuacao).Size(SMCSize.Grid5_24, SMCSize.Grid24_24, SMCSize.Grid6_24, SMCSize.Grid5_24)
    @Smc.DisplayFor(x => x.NomeCompleto).Size(SMCSize.Grid17_24, SMCSize.Grid24_24, SMCSize.Grid14_24, SMCSize.Grid17_24)
}

@using (Smc.Fieldset("DadosContato").CssClass("smc-sga-confirmacao-dados").Begin())
{
    using (Smc.Fieldset("Enderecos").CssClass("smc-sga-fieldset-secundario").Begin())
    {
        @(Smc.Grid("gridEnderecos", new SMCPagerModel<EnderecoViewModel>(Model.Enderecos))
                     .FieldColumn(x => x.TipoEndereco)
                     .FieldColumn(x => x.NomePais)
                     .FieldColumn(x => x.Cep)
                     .FieldColumn(x => x.Logradouro)
                     .FieldColumn(x => x.Numero)
                     .FieldColumn(x => x.Complemento)
                     .FieldColumn(x => x.Bairro)
                     .FieldColumn(x => x.NomeCidade)
                     .FieldColumn(x => x.SiglaUf)
                     .FieldColumn(x => x.Correspondencia)
                     .HideGridTitle()
                     .HideNavigator()
                     .HideNumberOfRowsPerPageSelector()
                     .HidePager()
                     .HideRowsTotalizer())
    }
    using (Smc.Fieldset("Telefones").CssClass("smc-sga-fieldset-secundario").Size(SMCSize.Grid12_24).Begin())
    {
        @(Smc.Grid("gridTelefones", new SMCPagerModel<TelefoneViewModel>(Model.Telefones))
                     .FieldColumn(x => x.TipoTelefone)
                     .FieldColumn(x => x.CodigoPais)
                     .FieldColumn(x => x.CodigoArea)
                     .FieldColumn(x => x.Numero)
                     .HideGridTitle()
                     .HideNavigator()
                     .HideNumberOfRowsPerPageSelector()
                     .HidePager()
                     .HideRowsTotalizer())
    }
    using (Smc.Fieldset("EnderecosEletronicos").CssClass("smc-sga-fieldset-secundario").Size(SMCSize.Grid12_24).Begin())
    {
        @(Smc.Grid("gridElderecosEletronicos", new SMCPagerModel<EnderecoEletronicoCategoriaViewModel>(Model.EnderecosEletronicos))
                     .FieldColumn(x => x.TipoEnderecoEletronico)
                     .FieldColumn(x => x.Descricao)
                     .HideGridTitle()
                     .HideNavigator()
                     .HideNumberOfRowsPerPageSelector()
                     .HidePager()
                     .HideRowsTotalizer())
    }
}

