@model ConsultaPosicaoGeralProcessoViewModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            using (Smc.Div().CssClass("smc-sga-display").Size(SMCSize.Grid24_24).Begin())
            {
                @Smc.DisplayFor(p => p.DescricaoProcesso).Size(SMCSize.Grid12_24)
                @Smc.DisplayFor(p => p.QuantidadeSolicitacoes).Size(SMCSize.Grid12_24)
            }
        }
        // Div com os detalhes
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
            {
                @(Smc.Grid("Etapas", new SMCPagerModel<PosicaoConsolidadaEtapaViewModel>(Model.Etapas)).HideNavigator().HideRowNumber().HideGridTitle().Size(SMCSize.Grid24_24)
                        .FieldColumn(f => f.Etapa)
                        .FieldColumn(f => f.NaoIniciada)
                        .FieldColumn(f => f.EmAndamento)
                        .FieldColumn(f => f.FinalizadaComSucesso)
                        .FieldColumn(f => f.FinalizadaSemSucesso)
                        .FieldColumn(f => f.Cancelada)
                        .FieldColumn(f => f.Total))
            }
        }
    }
}