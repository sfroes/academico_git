@using SMC.SGA.Administrativo.Areas.ALN.Models

@model InstituicaoNivelTipoVinculoAlunoListarDynamicModel

@{
    SMCButtonFluentConfiguration buttonInstituicaoNivelTipoVinculoAluno = Smc.Button(SMCMvcConsts.MODAL_BEHAVIOR_OPEN)
        .Attribute(SMCMvcConsts.MODAL_ID, SMCMvcConsts.SMC_VIEWPADRAO_MODAL_ID_EDIT)
        .Attribute(SMCMvcConsts.MODAL_SUBMIT_URL, Url.Action("Salvar", "InstituicaoNivelTipoOrientacao", new { @backUrl = Url.Action("Index", "InstituicaoNivelTipoVinculoAluno") }))
        .Attribute(SMCMvcConsts.MODAL_TITLE, Smc.GetUIResource("Title_Novo_Tipo_Orientacao"))
        .Ajax(isPost: false)
        .Text(Smc.GetUIResource("Botao_Novo_Tipo_Orientacao"))
        .Tooltip(Smc.GetUIResource("Botao_Novo_Tipo_Orientacao"))
        .Type(SMCButtonType.Link)
        .CssClass("smc-btn-novo-icotext")
        .SecurityToken(UC_ALN_003_01_03.ASSOCIAR_TIPO_ORIENTACAO)
        .Action("Incluir", "InstituicaoNivelTipoOrientacao", new { @SeqInstituicaoNivelTipoVinculoAluno = new SMCEncryptedLong(Model.Seq) });
}


@using (Smc.Div("").CssClass("smc-buttonset-inst-nivel-ensino").Size(SMCSize.Grid10_24, SMCSize.Grid24_24, SMCSize.Grid10_24, SMCSize.Grid10_24).Begin())
{
    @Smc.Templates.DetailedListButtons().AddButton(buttonInstituicaoNivelTipoVinculoAluno).ButtonSetType(SMCButtonSetType.Secondary).ButtonSetOrientation(SMCOrientation.Horizontal).NumberOfButtonsToShow(3)
}

