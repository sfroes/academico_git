@using SMC.SGA.Administrativo.Areas.ALN.Models
@using SMC.Framework.Extensions;

@model TermoIntercambioListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Seq).Size(SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid2_24)
            @Smc.DisplayFor(m => m.Descricao).Size(SMCSize.Grid11_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid10_24)
            @Smc.DisplayFor(m => m.NivelEnsino).Size(SMCSize.Grid6_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid6_24)
            @Smc.DisplayFor(m => m.TipoTermoIntercambio).Size(SMCSize.Grid5_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid6_24)
        }

        // Div com os detalhes
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.InstituicaoEnsinoExterna).Size(SMCSize.Grid17_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid13_24)
            @Smc.DisplayFor(m => m.Ativo).Size(SMCSize.Grid7_24, SMCSize.Grid12_24, SMCSize.Grid12_24, SMCSize.Grid2_24)
            @Smc.DisplayFor(m => m.DataInicio).Size(SMCSize.Grid8_24, SMCSize.Grid12_24, SMCSize.Grid12_24, SMCSize.Grid3_24)
            @Smc.DisplayFor(m => m.DataFim).Size(SMCSize.Grid9_24, SMCSize.Grid12_24, SMCSize.Grid12_24, SMCSize.Grid3_24)
            @Smc.DisplayFor(m => m.PossuiAnexo).Size(SMCSize.Grid7_24, SMCSize.Grid12_24, SMCSize.Grid12_24, SMCSize.Grid3_24)

            using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista-item-destaque").Size(SMCSize.Grid24_24).Begin())
            {
                foreach (var tipoMobilidade in Model.TiposMobilidade)
                {
                    using (Smc.Div().Size(SMCSize.Grid12_24).CssClass("smc-sga-subgrupo-lista-detalhada").Begin())
                    {
                        using (Smc.Div().Size(SMCSize.Grid16_24, SMCSize.Grid16_24, SMCSize.Grid16_24, SMCSize.Grid18_24).Begin())
                        {
                        <label class="smc-listdetailed-conteudo-subtitulo">@tipoMobilidade.TipoMobilidade.SMCGetDescription()</label>
                        }
                        using (Smc.Div().CssClass("smc-display smc-sga-totalizador").Size(SMCSize.Grid8_24, SMCSize.Grid8_24, SMCSize.Grid8_24, SMCSize.Grid6_24).Begin())
                        {
                            <label>Quant. de vagas</label>
                            <p>@tipoMobilidade.QuantidadeVagas</p>
                        }

                    @(Smc.Grid("gridParametros", new SMCPagerModel<TermoIntercambioPessoaViewModel>(tipoMobilidade.Pessoas))
                                                    .FieldColumn(w => w.CPFouPassaporte)
                                                    .HideGridTitle()
                                                    .HideNavigator()
                                                    .HideRowNumber()
                                                    .AllowSort())
                    }
                }
            }
        }
    }

    @Html.Partial("_DetailListButtons", Model)
}
