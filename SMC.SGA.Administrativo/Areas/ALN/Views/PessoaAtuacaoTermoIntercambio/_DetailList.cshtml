@model PessoaAtuacaoTermoIntercambioListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
    {
        using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-header-conteudo").Begin())
        {
            using (Smc.Div().Size(SMCSize.Grid24_24).Begin())
            {
                @Smc.DisplayFor(m => m.Nome).Size(SMCSize.Grid7_24)
                @Smc.DisplayFor(m => m.TipoAtuacao).Size(SMCSize.Grid3_24)
                @Smc.DisplayFor(m => m.NomeEntidadeResponsavel).Size(SMCSize.Grid14_24)

                @Smc.DisplayFor(m => m.DescricaoNivelEnsino).Size(SMCSize.Grid7_24)
                @Smc.DisplayFor(m => m.TipoVinculoAlunoDescricao).Size(SMCSize.Grid3_24)
                @Smc.DisplayFor(m => m.DescricaoTipoTermo).Size(SMCSize.Grid14_24)

                @Smc.DisplayFor(m => m.DescricaoTermoIntercambio).Size(SMCSize.Grid7_24)
                @Smc.DisplayFor(m => m.InstituicaoExternaNome).Size(SMCSize.Grid5_24)
                @Smc.DisplayFor(m => m.TipoMobilidade).Size(SMCSize.Grid6_24)
            }
        }

        //Div de períodos
        using (Smc.Div("PeriodoDiv").CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_Periodos")</label>
            }

            if (Model.Periodos.SMCCount() > 0)
            {
                @Smc.List("Periodo" + Model.Seq, Model.Periodos).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(periodo => Html.Partial("_Periodos", periodo))
            }
            else
            {
                using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
                {
                    <p>@Smc.GetUIResource("Label_Nenhum_Registro")</p>
                }
            }
        }
    }
}