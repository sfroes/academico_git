        @Smc.MasterDetail(prop => prop.Vigencias, SMC.Framework.UI.Mvc.DataAnnotations.SMCDetailType.Modal).CssClass("smc-sga-mestre-detalhe-bloqueio-botoes").MaximumItens(1)
    }
    else
    {
        @Smc.MasterDetail(prop => prop.Vigencias, SMC.Framework.UI.Mvc.DataAnnotations.SMCDetailType.Modal).CssClass("smc-sga-mestre-detalhe-bloqueio-botoes").MinimumItens(1)
    }
}

@Smc.EditorFor(prop => prop.TiposTermo)

