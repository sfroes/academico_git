@model ColaboradorListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item smc-sga-lista-detalhada").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24).Begin())
    {
        // Div da superior com dados pessoais
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Seq).Size(SMCSize.Grid4_24)
            @Smc.DisplayFor(m => m.NomeFormatado).Size(SMCSize.Grid10_24)
            if (Model.Falecido)
            {
                @Smc.DisplayFor(m => m.CpfOuPassaporte).Size(SMCSize.Grid4_24)
                @Smc.DisplayFor(m => m.Falecido).Size(SMCSize.Grid2_24)
                @Smc.DisplayFor(m => m.FormacaoAcademica).Size(SMCSize.Grid4_24)
            }
            else
            {
                @Smc.DisplayFor(m => m.CpfOuPassaporte).Size(SMCSize.Grid6_24)
                @Smc.DisplayFor(m => m.FormacaoAcademica).Size(SMCSize.Grid4_24)
            }
        }
        // Div da inferior com vínculos
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista smc-listdetailed-conteudo-separador-horizontal").Size(SMCSize.Grid24_24).Begin())
        {
            <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_VinculosAtivos")</label>
            if (Model.VinculosAtivos.SMCCount() > 0)
            {
                @Smc.DisplayFor(m => m.VinculosAtivos).Size(SMCSize.Grid24_24).HideLabel()
            }
            else
            {
                using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
                {
                    <p>@Smc.GetUIResource("Label_NenhumVinculoAtivo")</p>
                }
            }
        }
    }
    @Smc.Templates.DetailedListButtons().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24)
}