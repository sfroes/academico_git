@model TipoMensagemListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24, SMCSize.Grid22_24, SMCSize.Grid22_24, SMCSize.Grid23_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Descricao).Size(SMCSize.Grid7_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid9_24)
            @Smc.DisplayFor(m => m.CategoriaMensagem).Size(SMCSize.Grid9_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid9_24)
            @Smc.DisplayFor(m => m.PermiteCadastroManual).Size(SMCSize.Grid8_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid6_24)
        }

        // Div com os detalhes
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            if (Model.TiposAtuacao != null && Model.TiposAtuacao.Count > 0)
            {
                using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid12_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid12_24).Begin())
                {
                    @Smc.DisplayFor(m => m.TiposAtuacao).HideLabel(SMCDisplayHideLabel.Children).Size(SMCSize.Grid24_24).CssClass("smc-display-list-line") 
                }
            }

            if (Model.TiposUso != null && Model.TiposUso.Count > 0)
            {
                using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid12_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid12_24).Begin())
                {
                    @Smc.DisplayFor(m => m.TiposUso).HideLabel(SMCDisplayHideLabel.Children).Size(SMCSize.Grid24_24).CssClass("smc-display-list-line")
                }
            }
        }
    }

    @Smc.Templates.DetailedListButtons().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24)
}
