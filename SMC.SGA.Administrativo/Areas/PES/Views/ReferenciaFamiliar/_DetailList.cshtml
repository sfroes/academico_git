@model ReferenciaFamiliarListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.NomeParente).Size(SMCSize.Grid12_24)
            @Smc.DisplayFor(m => m.TipoParentesco).Size(SMCSize.Grid12_24)
        }

        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid12_24).Begin())
        {
            using (Smc.Div().Size(SMCSize.Grid24_24).Begin())
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_Endereco")</label>
            }

            if (Model.Enderecos.SMCCount() > 0)
            {
                @Smc.List("Endereco" + Model.Seq, Model.Enderecos).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(endereco => Html.Partial("_EnderecoList", endereco))
            }
        }
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista smc-listdetailed-conteudo-separador-vertical").Size(SMCSize.Grid12_24).Begin())
        {
            using (Smc.Div().Size(SMCSize.Grid24_24).Begin())
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_Contato")</label>
            }
            if (Model.Telefones.SMCCount() > 0)
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_ContatoTelefones")</label>
                @Smc.List("Telefone" + Model.Seq, Model.Telefones).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(telefone => Html.Partial("_TelefoneList", telefone))
            }

            if (Model.EnderecosEletronicos.SMCCount() > 0)
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_ContatoEnderecoEletronico")</label>
                @Smc.List("EnderecoEletronico" + Model.Seq, Model.EnderecosEletronicos).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(eletronico => Html.Partial("_EnderecoEletronicoList", eletronico))
            }
        }
    }
    @Smc.Templates.DetailedListButtons();
}
