@model ConfiguracaoNumeracaoTrabalhoListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24, SMCSize.Grid22_24, SMCSize.Grid22_24, SMCSize.Grid23_24).Begin())
    {
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.HiddenFor(m => m.Seq)
            @Smc.DisplayFor(m => m.EntidadeResponsavel).Size(SMCSize.Grid8_24)
            @Smc.DisplayFor(m => m.Descricao).Size(SMCSize.Grid8_24)
            @Smc.DisplayFor(m => m.NumeroUltimaNumeracao).Size(SMCSize.Grid8_24)

        }

        using (Smc.Div("divOfertas").CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Ofertas).HideLabel(SMCDisplayHideLabel.Children).Size(SMCSize.Grid24_24)
        }

    }
    @Smc.Templates.DetailedListButtons().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24)
}