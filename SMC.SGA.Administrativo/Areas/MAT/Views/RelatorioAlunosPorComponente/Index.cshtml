    {
        @Smc.EditorFor(x => x.SeqCicloLetivo)
        @Smc.EditorFor(x => x.SeqCursoOfertaLocalidade)
        @Smc.EditorFor(x => x.SeqTurno)
        @Smc.EditorFor(x => x.SeqTurma)
