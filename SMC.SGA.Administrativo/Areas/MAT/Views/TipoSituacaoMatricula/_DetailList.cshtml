@using SMC.SGA.Administrativo.Areas.MAT.Models

@model TipoSituacaoMatriculaListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24, SMCSize.Grid22_24, SMCSize.Grid22_24, SMCSize.Grid23_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Seq).Size(SMCSize.Grid2_24)
            @Smc.DisplayFor(m => m.Descricao).Size(SMCSize.Grid10_24)
            @Smc.DisplayFor(m => m.VinculoAlunoAtivo).Size(SMCSize.Grid4_24)
            @Smc.DisplayFor(m => m.Token).Size(SMCSize.Grid8_24)

        }
        // Div com situações da matricula
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid23_24).Begin())
        {
            using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid24_24).Begin())
            {
                @(Smc.Grid("gridParametros", new SMCPagerModel<SituacaoMatriculaViewModel>(Model.SituacoesMatricula.OrderBy(w=>w.Descricao)))
                .ContentColumn(@<text>@((item as SituacaoMatriculaViewModel).Descricao)</text>, header: Smc.GetUIResource("ColunaSituacaoMatriculaDescricao_Titulo"), cssClass: "smc-size-md-12 smc-size-xs-12 smc-size-sm-12 smc-size-lg-12")
                .FieldColumn(f => f.Token, cssClass: "smc-size-md-12 smc-size-xs-12 smc-size-sm-12 smc-size-lg-12")
                .HideGridTitle()
                .HideNavigator()
                .HideRowNumber()
                .AllowSort()
                )
            }
        }
    }

    @Smc.Templates.DetailedListButtons().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24)
}