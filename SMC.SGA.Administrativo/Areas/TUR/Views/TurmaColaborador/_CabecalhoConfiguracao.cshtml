@model TurmaCabecalhoConfiguracoesViewModel

@using (Smc.Div().Size(SMCSize.Grid24_24).Begin())
{

    if (Model.ConfiguracaoPrincipal == SMC.Academico.Common.Enums.LegendaPrincipal.Principal)
    {
        using (Smc.Div().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid1_24, SMCSize.Grid1_24).Begin())
        {
            @Smc.LegendItem(m => m.ConfiguracaoPrincipal, false)
        }
        @Smc.DisplayFor(m => m.DescricaoConfiguracaoComponente).HideLabel().Size(SMCSize.Grid17_24, SMCSize.Grid23_24, SMCSize.Grid23_24, SMCSize.Grid17_24)
    }

    else
    {
        @Smc.DisplayFor(m => m.DescricaoConfiguracaoComponente).CssClass("smc-sga-header-detalhes-offset").HideLabel().Size(SMCSize.Grid18_24, SMCSize.Grid23_24, SMCSize.Grid23_24, SMCSize.Grid18_24)
    }


    using (Smc.Div().Size(SMCSize.Grid6_24, SMCSize.Grid24_24, SMCSize.Grid24_24, SMCSize.Grid6_24).Begin())
    {
        @(Smc.ButtonSet().Type(SMCButtonSetType.Secondary)
            .AddButton(@Smc.Button(SMCMvcConsts.MODAL_BEHAVIOR_OPEN)
                .Attribute(SMCMvcConsts.MODAL_ID, "modalDetalheComponenteCurricular")
                .Attribute(SMCMvcConsts.MODAL_TITLE, Smc.GetUIResource("Title_VisualizarComponenteCurricular"))
                .Text(Smc.GetUIResource("Botao_VisualizarComponenteCurricular"))
                .Tooltip(Smc.GetUIResource("Botao_VisualizarComponenteCurricular"))
                .Ajax(isPost: false).Action("VerDetalhesPartial", "ComponenteCurricular", 
                new { @area = "CUR", @seq = new SMCEncryptedLong(Model.SeqComponenteCurricular) })
                .CssClass("smc-btn-visualizar-ico")
                .SecurityToken(SMC.Academico.Common.Areas.CUR.Constants.UC_CUR_002_03_01.VISUALIZAR_DETALHES_COMPONENTE_CURRICULAR))
        )
    }



}