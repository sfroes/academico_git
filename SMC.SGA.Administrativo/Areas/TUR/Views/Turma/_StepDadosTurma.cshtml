@model TurmaDynamicModel

@{
    Model.Cabecalho.TurmaConfiguracoesCabecalho = Model.TurmaConfiguracoesCabecalho;
}

@Html.Partial("_CabecalhoCompleto", Model.Cabecalho)

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-sga-confirmacao-dados").Begin())
{
    @Smc.EditorFor(x => x.SeqTipoTurma)
    @*if (Model.TurmaConfiguracoesCabecalho != null)
        {
            @(Smc.Legend("ConfiguracaoPrincipal", SMCOrientation.Vertical).CssClass("smc-sga-legenda").Items<SMC.Academico.Common.Enums.LegendaPrincipal>())
            @Smc.List("Configuracoes" + Model.Seq, m => m.TurmaConfiguracoesCabecalho).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(cabecalho => Html.Partial("_CabecalhoConfiguracao", cabecalho.Value))
        }*@

    using (Smc.Fieldset("fieldsetOfertas").LegendText(Smc.GetUIResource("ParametroOferta_Detalhe_Titulo")).Begin())
    {
        if (Model.TurmaOfertasMatriz != null && Model.TurmaOfertasMatriz.Count > 0)
        {
            @Smc.List("Ofertas" + Model.Seq, m => m.TurmaOfertasMatriz).Size(SMCSize.Grid24_24).HtmlTemplate(oferta => Html.Partial("_StepDadosTurmaOfertas", oferta.Value))
        }
        else
        {
            using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
            {
                <p>@Smc.GetUIResource("Label_Nenhum_Registro_Oferta_Matriz")</p>
            }
        }
    }

    @*using (Smc.Fieldset("fieldsetParametros").LegendText(Smc.GetUIResource("Parametros_Detalhe_Titulo")).Begin())
    {
        if (Model.TurmaParametros != null && Model.TurmaParametros.Count > 0)
        {
            @Smc.List("Criterios" + Model.Seq, m => m.TurmaParametros).CssClass("smc-listdetailed-conteudo-lista-item-destaque smc-size-md-24 smc-size-xs-24 smc-size-sm-24 smc-size-lg-24").HtmlTemplate(parametro => Html.Partial("_StepDadosTurmaParametros", parametro.Value))
        }
        else
        {
            using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
            {
                <p>@Smc.GetUIResource("Label_Nenhum_Registro_Parametros")</p>
            }
        }
    }*@

    using (Smc.Fieldset("fieldsetDivisoes").LegendText(Smc.GetUIResource("Divisoes_Detalhe_Titulo")).Begin())
    {
        if (Model.TurmaDivisoes != null && Model.TurmaDivisoes.Count > 0)
        {
            @Smc.List("Divisoes" + Model.Seq, m => m.TurmaDivisoes).CssClass("smc-listdetailed-conteudo-lista-item-destaque smc-size-md-24 smc-size-xs-24 smc-size-sm-24 smc-size-lg-24").HtmlTemplate(divisao => Html.Partial("_StepDadosTurmaDivisoes", divisao.Value))
        }
        else
        {
            using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
            {
                <p>@Smc.GetUIResource("Label_Nenhum_Registro_DivisoesComponente")</p>
            }
        }
    }

    using (Smc.Fieldset("fieldsetAssunto").LegendText(Smc.GetUIResource("ParametroAssunto_Detalhe_Titulo")).Begin())
    {
        if (Model.SeqComponenteCurricularAssunto != null)
        {

            using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista-item-destaque").Size(SMCSize.Grid24_24).Begin())
            {
                @*<label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("ParametroAssunto_Detalhe_Label")</label>*@

                using (Smc.Div().Size(SMCSize.Grid24_24).Begin())
                {
                    @Smc.DisplayFor(m => m.DescricaoComponenteCurricularAssunto).Size(SMCSize.Grid24_24).HideLabel();
                }
            }
        }
        else
        {
            using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista-item-destaque").Size(SMCSize.Grid24_24).Begin())
            {
                @*<label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("ParametroAssunto_Detalhe_Label")</label>*@

                using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
                {
                    <p>@Smc.GetUIResource("Label_Nenhum_Registro_Assunto_Componente")</p>
                }
            }
        }
    }
}