@model TurmaOfertaMatrizViewModel

@if (Model.OfertasMatrizDisplay != null)
{
    using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-conteudo-lista-item-destaque").Begin())
    {
        if (Model.OfertasMatrizDisplay.Count > 0)
        {
            <label class="smc-listdetailed-conteudo-subtitulo">@Model.DescricaoConfiguracaoComponente</label>
            var grupos = Model.OfertasMatrizDisplay.GroupBy(x => x.DescricaoCursoOfertaLocalidadeTurno);

            foreach (var grupo in grupos)
            {
                <label class="smc-listdetailed-conteudo-subtitulo">@grupo.Key</label>
                @(Smc.Grid("OfertasMatrizDisplay" + Model.SeqConfiguracaoComponente, new SMCPagerModel<TurmaOfertaMatrizDetailDisplayViewModel>(grupo))
                                                        .FieldColumn(f => f.OfertaCompleto, cssClass: "smc-size-md-15 smc-size-xs-15 smc-size-sm-15 smc-size-lg-15")
                                                        .FieldColumn(f => f.OfertaMatrizPrincipal, cssClass: "smc-size-md-3 smc-size-xs-3 smc-size-sm-3 smc-size-lg-3")
                                                        .FieldColumn(f => f.ReservaVagas, cssClass: "smc-size-md-3 smc-size-xs-3 smc-size-sm-3 smc-size-lg-3")
                                                        .FieldColumn(f => f.QuantidadeVagasOcupadas, cssClass: "smc-size-md-3 smc-size-xs-3 smc-size-sm-3 smc-size-lg-3")
                                                        .HideGridTitle()
                                                        .HideNavigator()
                                                        .HideRowNumber()
                                                        .Size(SMCSize.Grid24_24))

            }
        }
        else
        {
            <label class="smc-listdetailed-conteudo-subtitulo">@Model.DescricaoConfiguracaoComponente</label>

            using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
            {
                <p>@Smc.GetUIResource("Label_Nenhum_Registro")</p>
            }
        }
    }
}