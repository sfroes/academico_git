@model CursoListarDynamicModel

@{
    SMCButtonFluentConfiguration buttonFormacaoEspecifica = Smc.Button("btn-formacao-especifica")
        .Text(Smc.GetUIResource("Botao_Novo_Formacao_Especifica"))
        .Tooltip(Smc.GetUIResource("Botao_Novo_Formacao_Especifica"))
        .Type(SMCButtonType.Link)
        .CssClass("smc-btn-custom-destaque")
        .SecurityToken(UC_CSO_001_01_04.PESQUISAR_FORMACAO_ESPECIFICA_CURSO)
        .Action("Index", "CursoFormacaoEspecifica", new { seqCurso = new SMCEncryptedLong(Model.Seq) });

    SMCButtonFluentConfiguration buttonCursoOferta = Smc.Button(SMCMvcConsts.MODAL_BEHAVIOR_OPEN)
        .Attribute(SMCMvcConsts.MODAL_ID, SMCMvcConsts.SMC_VIEWPADRAO_MODAL_ID_EDIT)
        .Attribute(SMCMvcConsts.MODAL_SUBMIT_URL, Url.Action("Salvar", "CursoOferta", new { @backUrl = Url.Action("Index", "Curso") }))
        .Attribute(SMCMvcConsts.MODAL_TITLE, Smc.GetUIResource("Title_Novo_Curso_Oferta"))
        .Ajax(isPost: false)
        .Text(Smc.GetUIResource("Botao_Novo_Curso_Oferta"))
        .Tooltip(Smc.GetUIResource("Botao_Novo_Curso_Oferta"))
        .Type(SMCButtonType.InputButton).CssClass("smc-btn-custom-destaque")
        .SecurityToken(UC_CSO_001_01_03.MANTER_OFERTA_CURSO)
        .Action("Incluir", "CursoOferta", new { seqCurso = new SMCEncryptedLong(Model.Seq) });
}

@Smc.Templates.DetailedListButtons().AddButton(buttonFormacaoEspecifica).AddButton(buttonCursoOferta).Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid2_24, SMCSize.Grid1_24)