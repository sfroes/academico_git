@model CursoUnidadeListarDynamicModel

@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("smc-listdetailed-item").Begin())
{
    using (Smc.Div().CssClass("smc-listdetailed-conteudo").Size(SMCSize.Grid23_24, SMCSize.Grid22_24, SMCSize.Grid22_24, SMCSize.Grid23_24).Begin())
    {
        // Header item
        using (Smc.Div().CssClass("smc-listdetailed-header-conteudo").Size(SMCSize.Grid24_24).Begin())
        {
            @Smc.DisplayFor(m => m.Titulo).CssClass("smc-listdetailed-conteudo-titulo").HideLabel().Size(SMCSize.Grid24_24)
        }

        // Div com ofertas de curso
        using (Smc.Div().CssClass("smc-listdetailed-conteudo-lista").Size(SMCSize.Grid24_24).Begin())
        {
            <label class="smc-listdetailed-conteudo-subtitulo">@Smc.GetUIResource("Label_OfertasCursoLocalidade")</label>
            if (Model.CursosOfertaLocalidade.SMCCount() > 0)
            {
                @Smc.List("OfertasCursoLocalidade" + Model.Seq, Model.CursosOfertaLocalidade).CssClass("smc-list-item-grid").Size(SMCSize.Grid24_24).HtmlTemplate(oferta => Html.Partial("_OfertaCursoLocalidade", oferta))
            }
            else
            {
                using (Smc.Div().CssClass("smc-list-group-no-results").Size(SMCSize.Grid24_24).Begin())
                {
                    <p>@Smc.GetUIResource("Label_Nenhum_Registro")</p>
                }
            }
        }
    }
    @Smc.Templates.DetailedListButtons().Size(SMCSize.Grid1_24, SMCSize.Grid2_24, SMCSize.Grid1_24, SMCSize.Grid1_24)
}